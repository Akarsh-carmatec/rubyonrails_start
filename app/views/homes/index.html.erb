<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
      <div class="card-header" data-background-color="orange">
        <h4 class="title">Employees Stats</h4>
        <p class="category">New employees on 15th September, 2016</p>
      </div>
      <div class="card-content table-responsive">
        <table class="table table-hover">
          <thead class="text-warning">
            <th>
              <div class="checkbox">
                <label>
                  <input id="check-box-selectall" type="checkbox" name="optionsCheckboxes">
                </label>
              </div>
            </th>
            <th>ID</th>
            <th>Name</th>
            <th>Email ID</th>
            <th>Country</th>
            <th>Action</th>
          </thead>
          <tbody>
            <% @userlist.each do |r| %>
            <tr>
              <td>
                <div class="checkbox">
                  <label>
                    <input id="checkbox_<%= r.id %>" class="select_checkbox" type="checkbox" name="optionsCheckboxes">
                  </label>
                </div>
              </td>
              <td><%= r.id %></td>
              <td><%= r.firstname %> <%= r.middlename %> <%= r.lastname %></td>
              <td><%= r.email_id %></td>
              <td><%= r.company %></td>
              <td class="actions">
                <%= link_to(raw("<i class='material-icons'>art_track</i>"), userslist_path(r.id),:class => 'btn btn-info btn-simple btn-xs',:rel=>'tooltip' ,:title=>'view')  %>
                <button type="button" rel="tooltip" title="Edit" class="btn btn-primary btn-simple btn-xs">
                  <i class="material-icons">edit</i>
                </button>
                <%= link_to(raw("<i class='material-icons'>close</i>"), userslist_path(r.id), method: :delete, :class => 'delete_pony btn btn-danger btn-simple btn-xs', data: { confirm: 'Are you sure?' },:remote => true,:rel=>'tooltip' ,:title=>'delete')  %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <%= link_to(raw("<div class='ripple-container'></div><i class='material-icons'>close</i>Delete All"), userslist_path(1), method: :delete, data: { confirm: 'Are you sure?' },:remote => true,:class => 'btn btn-danger delete_all',:rel=>'tooltip' ,:title=>'delete',:style =>{"display":"none !important"})  %>
  </div>
</div>
      
<script type="text/javascript">
  $('.delete_pony').bind('ajax:success', function() {
     $(this).closest('tr').fadeOut();
  });
</script>